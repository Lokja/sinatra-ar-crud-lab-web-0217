<title>Blog Test</title>
<body>
  <h1>Devo's Blog Tester</h1>
  <h2>Edit Yo Blog!</h2>
  <form action="/posts/<%= @post.id %>" method="post">
    <input id="hidden" type="hidden" name="_method" value="patch">
    Edit Name: <input type="text" name="name" value="<%= @post.name %>"><br>
    Edit Content: <input type="text" name="content" value="<%= @post.content %>"><br>
    <input type="submit" value="submit">
  </form>
</body>
